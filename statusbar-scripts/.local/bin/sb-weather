#!/bin/sh

set -ux

# Author: nrv
# Description: Get local weather from https://wttr.in in +/-NÂ°C format,
# then strip the +/-N with grep

# c    Weather condition,
# C    Weather condition textual name,
# x    Weather condition, plain-text symbol,
# h    Humidity,
# t    Temperature (Actual),
# f    Temperature (Feels Like),
# w    Wind,
# l    Location,
# m    Moon phase ðŸŒ‘ðŸŒ’ðŸŒ“ðŸŒ”ðŸŒ•ðŸŒ–ðŸŒ—ðŸŒ˜,
# M    Moon day,
# p    Precipitation (mm/3 hours),
# P    Pressure (hPa),
# u    UV index (1-12),
#
# D    Dawn*,
# S    Sunrise*,
# z    Zenith*,
# s    Sunset*,
# d    Dusk*,
# T    Current time*,
# Z    Local timezone.

: "${XDG_STATE_HOME:="${HOME}/.local/state"}"
: "${XDG_DATA_HOME:="${HOME}/.local/share"}"

data_dir="${XDG_DATA_HOME}/sb/weather"
state_dir="${XDG_STATE_HOME}/sb/weather"

location_file="${data_dir}/location" 
log_file="${state_dir}/weather.log"

mkdir -p "${state_dir}"
mkdir -p "${data_dir}"

location=Unknown
[ -f "${location_file}" ] && location="$(cat 2>/dev/null "${location_file}")"

weather="$(curl -s "http://wttr.in/${location}?format=%t" | grep -oE '[\+\-]{1}[0-9]+')"

# Save logs
printf "%s %s %s\n" "$(date +%Y%m%d%H%M%S)" "${weather}" "${location}" >> "${log_file}"

# Output
printf "%s" "${weather}"
