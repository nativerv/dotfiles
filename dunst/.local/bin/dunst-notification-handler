#!/bin/sh

# Reference:
# ${0}   ${1}    ${2}    ${3} ${4} ${5}
# script appname summary body icon urgency

XDG_DATA_HOME="${XDG_DATA_HOME:-"${HOME}/.local/share"}"
             
script="${0}"
appname="${1}"
summary="${2}"
body="${3}"
icon="${4}"
urgency="${5}"

# Get app name:
# zenity --info --text "'${1}' - '${2}' - '${3}' - '${4}' - '${5}'" &

# Ignore list - play no sound for these
[ "${appname}" = "Telegram Desktop" ] && exit
[ "${appname}" = "flameshot" ] && exit
[ "${appname}" = "setwall" ] && exit

case "${urgency}" in
  "LOW") exit ;;
  "NORMAL") paplay --volume=$((65535/2)) "${XDG_DATA_HOME}/dunst/sounds/Iapetus.ogg" ;;
  "CRITICAL") paplay --volume=$((65535)) "${XDG_DATA_HOME}/dunst/sounds/Iapetus.ogg" ;;
  *) ;;
esac



