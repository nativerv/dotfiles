#!/bin/sh

# Reset
COLOR_OFF='\033[0m'       # Text Reset

# Regular Colors
BLACK='\033[0;30m'        # Black
RED='\033[0;31m'          # Red
GREEN='\033[0;32m'        # Green
YELLOW='\033[0;33m'       # Yellow
BLUE='\033[0;34m'         # Blue
PURPLE='\033[0;35m'       # Purple
CYAN='\033[0;36m'         # Cyan
WHITE='\033[0;37m'        # White

usecolor() {
  printf "${1}%s${COLOR_OFF}" "${2}"
}

usecolor "${BLACK}\n" 'BLACK'
usecolor "${RED}\n" 'RED'
usecolor "${GREEN}\n" 'GREEN'
usecolor "${YELLOW}\n" 'YELLOW'
usecolor "${BLUE}\n" 'BLUE'
usecolor "${PURPLE}\n" 'PURPLE'
usecolor "${CYAN}\n" 'CYAN'
usecolor "${WHITE}\n" 'WHITE'
