#!/bin/sh

set -e

LOGDIR="${XDG_DATA_HOME:-$HOME/.local/share}/you"

mkdir -p "${LOGDIR}"

printf 'Enter a url: ' >&2
read -r 'url'

yt-dlp \
  -o "%(extractor)s:%(id)s:%(title)s.%(ext)s" \
  "${@}" \
  "${url}"

printf "%s\t%s\t%s\n" "${url}" "stub" "${?}" >> "${LOGDIR}/downloads.log"

exit "${?}"
