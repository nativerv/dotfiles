ZSH_HIGHLIGHT_STYLES[comment]='fg=#4B4f71,bold'
ZSH_HIGHLIGHT_STYLES[single-quoted-argument]='fg=blue'
ZSH_HIGHLIGHT_STYLES[double-quoted-argument]='fg=blue'
ZSH_HIGHLIGHT_STYLES[dollar-quoted-argument]='fg=blue'

# Enable pywal colors in terminal by pasting 
# it's escape sequences
pywal_sequences_path="${XDG_CACHE_HOME}/wal/sequences"
[ -s "${pywal_sequences_path}" ] && (cat "${pywal_sequences_path}" &)

# Enable pywal colors in TTY by pasting 
# it's escape sequences
pywal_colors_path="${XDG_CACHE_HOME}/wal/colors-tty.sh"
[ -s "${pywal_colors_path}" ] && source "${pywal_colors_path}"

# vim:ft=zsh
