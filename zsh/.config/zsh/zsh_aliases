alias neofetch="neofetch \
	--line_wrap off \
	--bold on \
	--uptime_shorthand on"

# Shorthands for various commands
alias clr="clear"
alias cls="clear"
alias nv="nvim"
alias ..="cd .."
alias unstow="stow -D"
alias restow="stow -R"
alias lz="lazygit"
alias lyrics="ncmpcpp --screen lyrics"
alias visualizer="ncmpcpp --screen visualizer"
alias pac="pacman"
alias sudo="sudo "

# Aliases for Git
alias g="git"
alias gs="git status"
alias gl="git log"
alias gll="git log --graph --pretty=oneline"
alias gd="git diff"
alias ga="git add"
alias gc="git commit"
alias gcm="git commit -m"
alias gca="git commit --amend"
alias gst="git stash"
alias gb="git branch"
alias gch="git checkout"
alias gp="git push"
alias gpall="git push origin --all"
alias gpmaster="git push origin msater"

# Aliases for updating environments
alias renv="exec zsh"
alias zsh-update-plugins="find "$ZDOTDIR/plugins" -type d -exec test -e '{}/.git' ';' -print0 | xargs -I {} -0 git -C {} pull -q"
alias nvplug="nvim +PlugInstall"

# Aliases for ls
alias ls='ls --color=auto --group-directories-first'
alias ll='ls -lF --group-directories-first'
alias lla='ls -alF --group-directories-first'
alias lld='ls -aldF --group-directories-first'
alias la='ls -A --group-directories-first'
alias l='ls -CF --group-directories-first'

# Aliases for tree
alias t='tree -aAcC'

# Colorize various commands
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias ip='ip -color=auto'
alias diff='diff --color'

# Alias help for ZSH builtins
unalias run-help
autoload run-help
HELPDIR=/usr/share/zsh/"${ZSH_VERSION}"/help
alias help=run-help

# Confirm before overwriting something
alias cp="cp -iv"
alias mv='mv -iv'
alias rm='rm -iv'

# Unsafe rm, mv and cp (no confirm)
alias rmunsafe='rm'
alias mvunsafe='mv'
alias cpunsafe='cp'

# Get top process eating memory
alias psmem='ps auxf | sort -nr -k 4 | head -5'

# Get top process eating cpu ##
alias pscpu='ps auxf | sort -nr -k 3 | head -5'

# systemd
alias list_systemctl="systemctl list-unit-files --state=enabled"

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

