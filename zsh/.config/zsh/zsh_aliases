alias neofetch="neofetch \
	--line_wrap off \
	--bold on \
	--uptime_shorthand on"

# Shorthands for various commands
alias clr="clear"
alias cls="clear"
alias nv="nvim"
alias unstow="stow -D"
alias restow="stow -R"
alias lz="lazygit"
alias muslyr="ncmpcpp --screen lyrics"
alias musvis="ncmpcpp --screen visualizer"
alias pac="pacman"
alias bs="bullshit"
alias r="ranger"
alias nf="neofetch"
alias pf="pfetch"
alias af="afetch"
alias nb="newsboat"
alias zt="zathura"
alias fj="firejail "
alias nfj="firejail --noprofile "
alias dfj="firejail --profile=default "
alias pm="pulsemixer"

# Fix mkdir to create all dirs recursively
alias md="mkdir -p"
alias mt="touch"
alias dnd="dragon-drag-and-drop"

# Fix sudo to take another alias like `nv`
alias sudo="sudo "

# Fix lolcat to always output truecolor
alias lolcat="lolcat --truecolor"

# Fix yarn to use XDG directory
alias yarn='yarn --use-yarnrc "${XDG_CONFIG_HOME}/yarn/config"'

# Configure ncdu
alias ncdu="ncdu -q --color dark --confirm-quit --exclude-kernfs"

# Aliases for Git
alias g="git"
alias gs="git status"
alias gl="git log"
alias gll="git log --graph --pretty=oneline"
alias gd="git diff"
alias ga="git add"
alias gc="git commit"
alias gcm="git commit -m"
alias gca="git commit --amend"
alias gst="git stash"
alias gb="git branch"
alias gch="git checkout"
alias gp="git push"
alias gpall="git push origin --all"
alias gpmaster="git push origin msater"

# Aliases for updating environments
alias renv="reset; exec zsh"
alias zshplug="find "${ZDOTDIR}/plugins" -type d -exec test -e '{}/.git' ';' -print0 | xargs -I {} -0 git -C {} pull -q"
alias nvplug="nvim +PlugInstall"

# Aliases for ls
alias ls='ls --color=auto --group-directories-first' 
alias ll='ls -lF'    # Table with file type indicators
alias lla='ls -alF'  # Table with all and file type indicators
alias lld='ls -aldF' # Table with exact file (for looking at directories, not their contents)
alias la='ls -A'     # Simple with all 
alias l='ls -F'      # Simple with file type indicators

# Aliases for tree
alias t='tree -aAcC --dirsfirst' # Sort by modtime, show all, enable colors, fix lines

# Colorize various commands
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias ip='ip -color=auto'
alias diff='diff --color'

# Alias help for ZSH builtins
unalias run-help
autoload run-help
HELPDIR=/usr/share/zsh/"${ZSH_VERSION}"/help
alias help=run-help

# Confirm before overwriting something
alias cp="cp -iv"
alias mv='mv -iv'
alias rm='rm -iv'

# Unsafe rm, mv and cp (no confirm)
alias rmunsafe='rm'
alias mvunsafe='mv'
alias cpunsafe='cp'

# Get top process eating memory
alias psmem='ps aux | sort -nr -k 4 | head -5'

# Get top process eating cpu ##
alias pscpu='ps aux | sort -nr -k 3 | head -5'

# systemd
alias list_systemctl="systemctl list-unit-files --state=enabled"

